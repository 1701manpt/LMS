@page
@model LMS.ViewModels.Accounts.LogInViewModel
@{
    Layout = "_LogInLayout";
}

<div class="row w-100 h-100 d-flex justify-content-center align-items-center">
    <div class="col-md-4 p-4 rounded border bg-white shadow">
        <form>
            <div class="border-bottom mb-3">
                <p class="text-primary text-uppercase fs-3 mb-3">
                    Sign In
                </p>
            </div>
            <div class="row my-3">
                <label for="inputEmail3" class="col-sm-3 col-form-label">User Name</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="inputEmail3">
                </div>
            </div>
            <div class="row my-3">
                <label for="inputPassword3" class="col-sm-3 col-form-label">Password</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control" id="inputPassword3">
                </div>
            </div>
            <button type="submit" class="btn btn-primary form-control">Sign in</button>
        </form>
    </div>
</div>
