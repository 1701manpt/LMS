@model LMS.ViewModels.Dvds.IndexViewModel

@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-primary">
    <i class="bi bi-plus-square"></i>
    <span class="ms-1">Create</span>
</a>
<div class="table-responsive">
    <table class="table align-middle text-center caption-top table-bordered">
        <caption>List of dvds</caption>
        <thead class="table-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Dvds.First().Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dvds.First().Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dvds.First().Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dvds.First().PublicationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dvds.First().RunTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dvds.First().Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dvds.First().Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dvds.First().AvailableQuantity)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Dvds != null)
            {
            foreach (var item in Model.Dvds)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PublicationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RunTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvailableQuantity)
                    </td>
                    <td>
                        @await Html.PartialAsync("~/Views/Shared/PartialViews/_ControlBtnPartial.cshtml",
                            new ControlBtnPartialViewModel {
                                Id = item.Id,
                                ControllerName = "Dvds",
                                Edit = true,
                                Details = true,
                                Delete = true
                            }
                        )
                    </td>
                </tr>
            }}
        </tbody>
    </table>
</div>
@await Html.PartialAsync("~/Views/Shared/PartialViews/_PaginationPartial.cshtml", Model.PaginationPartialViewModel)
