@model LMS.ViewModels.Carts.IndexViewModel

@{
    ViewData["Title"] = "Create";
}

<div>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-light text-primary"><span>&#8592;</span> Back</a>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="BorrowedDate" class="control-label"></label>
                <input asp-for="BorrowedDate" class="form-control" readonly />
            </div>
            <div class="form-group my-2">
                <label asp-for="TotalCost" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="TotalCost" class="form-control" readonly>
                    <span class="input-group-text"> ₫</span>
                </div>
            </div>

            <div class="form-group my-4">
                <input type="submit" value="Borrow" class="btn btn-primary form-control" />
            </div>
        </form>
    </div>
    <div class="col-md-8 d-flex flex-column">
        <div class="table-responsive">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CartItemTempList.First().Item)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CartItemTempList.First().Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CartItemTempList.First().Cost)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CartItemTempList != null)
                    {
                        @foreach (var item in Model.CartItemTempList)
                        {
                            <tr>
                                <td>
                                    @item.Item.Title
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    @((item.Quantity * item.Item.Price).ToString("C"))
                                </td>
                                <td>
                                    <div class="float-end btn-group btn-group-sm gap-2">
                                        <a asp-action="Edit" asp-controller="CartItemTemps" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-controller="CartItemTemps" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="bi bi-x-square"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
