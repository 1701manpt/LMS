@model LMS.Models.Borrower

@{
    ViewData["Title"] = "Delete";
}

<div>
    <a asp-action="Index" class="btn btn-outline-light text-primary"><span>&#8592;</span> Back</a>
</div>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LibraryCardNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LibraryCardNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
    <div class="row">
        <div class="col-md-4">
            <span class="text-danger my-2">@ViewBag.ErrorRelationship</span>
            <div class="alert alert-danger my-2" role="alert">
                <h5>Are you sure you want to delete this?</h5>
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger form-control my-2" />
            </form>
        </div>
    </div>
</div>
