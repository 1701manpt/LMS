@model IEnumerable<LMS.Models.Borrower>

@{
    ViewData["Title"] = "Index";
}

<div class="g-3 row row-cols-2 mb-3">
    <div class="col-auto">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-square"></i>
            Create new
        </a>
    </div>
    <div class="col-auto">
        <form asp-action="Search">
            <div class="input-group">
                <input type="search" value="@ViewBag.LibraryCardNumber" name="libraryCardNumber" class="form-control" placeholder="Enter library card number">
                <button type="submit" class="btn btn-info text-white">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>
<div class="table-responsive">
    <table class="table text-center">
        <thead>
            <tr>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.LibraryCardNumber)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.LibraryCardNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        <div class="float-end btn-group btn-group-sm gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                <i class="bi bi-info-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                <i class="bi bi-x-square"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
