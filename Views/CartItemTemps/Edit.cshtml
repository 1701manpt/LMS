@model LMS.Models.CartItemTemp

@{
    ViewData["Title"] = "Edit";
}

<div>
    <a asp-action="Create" asp-controller="Carts" class="btn btn-outline-light text-primary"><span>&#8592;</span> Back</a>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group my-2">
                <label asp-for="ItemId" class="control-label"></label>
                <input asp-for="ItemId" class="form-control" hidden />
                <input type="text" value="@Model.Item.Title" class="form-control" readonly />
            </div>
            <div class="form-group my-2">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group my-4">
                <input type="submit" value="Save" class="btn btn-success  form-control" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
