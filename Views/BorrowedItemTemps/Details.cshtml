@model LMS.Models.BorrowedItemTemp

@{
    ViewData["Title"] = "Delete";
}

<div>
    <a asp-action="Create" asp-controller="BorrowedHistories" class="btn btn-outline-light text-primary"><span>&#8592;</span> Back</a>
</div>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class="col-sm-10">
            @((Model.Quantity * Model.Item.Price).ToString("C"))
        </dd>
    </dl>

    <div>
        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    </div>
</div>


