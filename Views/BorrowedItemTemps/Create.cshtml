@model LMS.Models.BorrowedItemTemp

@{
    ViewData["Title"] = "Create";
}

<h5>Create</h5>
<h4>Borrowed Item</h4>
<hr />
<div>
    <a asp-action="Create" asp-controller="BorrowedHistories" class="btn btn-outline-light text-primary"><span>&#8592;</span> Back</a>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="ItemId" class="control-label"></label>
                <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId">
                    <option value="" selected>---Select Item---</option>
                </select>
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group my-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
