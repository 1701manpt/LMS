@model LMS.ViewModels.Items.CreateViewModel

@{
    ViewData["Title"] = "Create";
}

<div>
    <a asp-action="Index" class="btn btn-outline-light text-primary"><span>&#8592;</span> Back</a>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="Type" class="control-label"></label>
                <div class="btn-group g-3 ms-4">
                    @for (int i = 0; i < ViewBag.ItemTypes.Length; i++)
                    {
                        <a asp-action="Create"
                           asp-route-itemType="@i"
                           class="btn @(i == ViewBag.ItemType ? "text-white bg-secondary" : "")">
                            @ViewBag.ItemTypes[i]
                        </a>
                    }
                </div>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="PublicationDate" class="control-label"></label>
                <input asp-for="PublicationDate" class="form-control" />
                <span asp-validation-for="PublicationDate" class="text-danger"></span>
            </div>
            @{
                switch (ViewBag.ItemType)
                {
                    case 0:
                        <div class="form-group my-2">
                            <label asp-for="NumberOfPages" class="control-label"></label>
                            <input asp-for="NumberOfPages" class="form-control" />
                            <span asp-validation-for="NumberOfPages" class="text-danger"></span>
                        </div>
                        break;
                    case 1:
                        <div class="form-group my-2">
                            <label asp-for="RunTime" class="control-label"></label>
                            <input asp-for="RunTime" class="form-control" />
                            <span asp-validation-for="RunTime" class="text-danger"></span>
                        </div>
                        break;

                    case 2:
                        break;
                }
            }

            <div class="form-group my-2">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group my-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
