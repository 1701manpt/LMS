@model LMS.Models.BorrowedHistory

@{
    ViewData["Title"] = "Create";
}

<div>
    <a asp-action="Index" class="btn btn-outline-light text-primary"><span>&#8592;</span> Back</a>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchBorrowers">
            <div class="input-group my-2">
                <input type="text" name="keyword" class="form-control" placeholder="Enter card number" aria-describedby="button-addon2">
                <input type="submit" class="btn btn-outline-info" id="button-addon2" value="Search" />
            </div>
        </form>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="BorrowerId" class="control-label"></label>
                <select asp-for="BorrowerId" class="form-control" asp-items="ViewBag.BorrowerId">
                    <option value="" selected>---Select Borrower---</option>
                </select>
                <span asp-validation-for="BorrowerId" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="BorrowedDate" class="control-label"></label>
                <input type="text" class="form-control" value="@ViewBag.BorrowedDate" readonly />
                <span asp-validation-for="BorrowedDate" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="TotalCost" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="TotalCost" class="form-control" value="@ViewBag.TotalCost" readonly>
                    <span class="input-group-text"> ₫</span>
                </div>
                <span asp-validation-for="TotalCost" class="text-danger"></span>
            </div>

            <div class="form-group my-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
        </form>
    </div>
    <div class="col-md-8 d-flex flex-column">
        <div class="align-self-end"><a asp-action="Create" asp-controller="BorrowedItemTemps" class="btn btn-primary">Add Item</a></div>
        <div class="table-responsive">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.BorrowedItems[0].Item)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BorrowedItems[0].Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BorrowedItems[0].Cost)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.BorrowedItemTemps != null)
                    {
                        @foreach (var item in ViewBag.BorrowedItemTemps)
                        {
                            <tr>
                                <td>
                                    @item.Item.Title
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    @((item.Quantity * item.Item.Price).ToString("C"))
                                </td>
                                <td>
                                    <div class="float-end btn-group btn-group-sm gap-2">
                                        <a asp-action="Edit" asp-controller="BorrowedItemTemps" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Details" asp-controller="BorrowedItemTemps" asp-route-id="@item.Id" class="btn btn-outline-info">
                                            <i class="bi bi-info-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-controller="BorrowedItemTemps" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="bi bi-x-square"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
