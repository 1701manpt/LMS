@model IEnumerable<LMS.Models.BorrowedHistory>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-end">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>
<div class="table-responsive">
    <table class="table text-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Borrower.CardNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Borrower.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BorrowedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalCost)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Borrower.CardNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Borrower.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BorrowedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalCost)
                    </td>
                    <td>
                        <div class="float-end btn-group btn-group-sm gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                <i class="bi bi-info-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                <i class="bi bi-x-square"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
