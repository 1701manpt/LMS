@model LMS.ViewModels.Magazines.IndexViewModel

@{
    ViewData["Title"] = "Index";
}

@* create new *@
<a asp-action="Create" class="btn btn-primary">
    <i class="bi bi-plus-square"></i>
    <span class="ms-1">Create</span>
</a>

@* table *@
<div class="table-responsive">
    <table class="table align-middle text-center caption-top table-bordered">
        <caption>List of magazines</caption>
        <thead class="table-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Magazines.First().Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Magazines.First().Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Magazines.First().Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Magazines.First().PublicationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Magazines.First().Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Magazines.First().Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Magazines.First().AvailableQuantity)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Magazines != null) {
                foreach (var item in Model.Magazines)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PublicationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AvailableQuantity)
                        </td>
                        <td>
                            @* edit/detail/delete btn *@
                            @await Html.PartialAsync("~/Views/Shared/PartialViews/_ControlBtnPartial.cshtml",
                                new ControlBtnPartialViewModel {
                                    Id = item.Id,
                                    ControllerName = "Magazines",
                                    Edit = true,
                                    Details = true,
                                    Delete = true
                                }
                            )
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@* pagination *@
@await Html.PartialAsync("~/Views/Shared/PartialViews/_PaginationPartial.cshtml", Model.PaginationPartialViewModel)
